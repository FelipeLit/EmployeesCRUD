@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <div class="row">
    <div class="col-md-2">
        <div>
            <a class="btn btn-success" asp-action="Create" asp-controller="Employees">registras nuevo empleado</a>
        </div>

        <div>
            <a class="btn btn-primary mt-3" asp-action="Index" asp-controller="Employees">Listar de empleados</a>
        </div>
    </div>

    <div class="col-md-10">
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <form class="d-flex justify-content-end align-items-end" role="search" method="get" asp-action="Index" asp-controller="Employees">
                    <input class="form-control me-2" type="text" placeholder="Buscar" name="search">
                    <input class="btn btn-outline-success" type="submit" value="Buscar">
                </form>
            </div>
        </nav>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Acerca de</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody class="border-secondary">
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Names</td>
                        <td>@item.LastNames</td>
                        <td>@item.Email</td>
                        <td>@item.About</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Employees" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-success" asp-action="Edit" asp-controller="Employees" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Employees" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }       
            </tbody>
        </table>
    </div>
    </div>

</div>